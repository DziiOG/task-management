{
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "eslint.alwaysShowStatus": true,
    "files.autoSave": "off",
    "javascript.validate.enable": false,
    "typescript.validate.enable": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}